{
  "testRunner": "jest",
  "runnerConfig": "e2e/config.json",
  "apps": {
    "ios": {
      "type": "ios.app",
      "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/detoxTest.app",
      "build": "cd ios && pod update ; xcodebuild -workspace detoxTest.xcworkspace -scheme detoxTest -configuration Release -sdk iphonesimulator -derivedDataPath build"
    },
    "android": {
      "type": "android.apk",
      "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
      "build": "cd android ; ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release ; cd .."
    }
  },
  "devices": {
    "simulator": {
      "type": "ios.simulator",
      "device": {
        "type": "iPhone 12"
      }
    },
    "amit-device": {
      "type": "android.emulator",
      "device": {
        "avdName": "Nexus_5"
      }
    }
  },
  "configurations": {
    "ios": {
      "device": "simulator",
      "app": "ios"
    },
    "android": {
      "device": "amit-device",
      "app": "android"
    }
  }
}
